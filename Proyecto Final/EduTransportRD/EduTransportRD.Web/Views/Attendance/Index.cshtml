@model IEnumerable<EduTransportRD.Domain.Entities.Attendance>

@{
    ViewData["Title"] = "Asistencias";
}

<link rel="stylesheet" href="~/css/forms-modal.css" />

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light">Asistencias</h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Registrar asistencia
        </a>
    </div>

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Buscar estudiante o ruta...">
            <button class="btn btn-primary"><i class="bi bi-search"></i></button>
        </div>
    </form>

    <div class="card bg-dark text-light shadow-lg border-secondary">
        <div class="card-body">

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    No hay registros de asistencia.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-striped align-middle">

                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Estudiante</th>
                                <th>Ruta</th>
                                <th>Presente</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Student?.FirstName @item.Student?.LastName</td>
                                    <td>@item.Route?.RouteName</td>
                                    <td>
                                        @if (item.IsPresent)
                                        {
                                            <span class="badge bg-success">Sí</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No</span>
                                        }
                                    </td>

                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-primary me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }

        </div>
    </div>
</div>
