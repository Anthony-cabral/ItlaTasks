@model EduTransportRD.Web.Helpers.Paginator<EduTransportRD.Domain.Entities.Driver>

@{
    ViewData["Title"] = "Conductores";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Conductores Registrados</h2>

        <a class="btn btn-success btn-lg fw-bold" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Registrar Conductor
        </a>
    </div>

    <form method="get" class="row align-items-center mb-3">

        <div class="col-md-6 mt-3">
            <input type="text"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Buscar por nombre, documento o licencia..." />
        </div>

        <div class="col-md-6 d-flex justify-content-end gap-2">

            <select name="pageSize" class="form-select" style="max-width:160px;">
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 por página</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 por página</option>
                <option value="30" selected="@(ViewBag.PageSize == 30)">30 por página</option>
            </select>

            <button class="btn btn-primary px-4">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>

    </form>

    <div class="table-responsive mt-3">
        <table class="table table-dark table-hover table-striped align-middle text-center shadow rounded-3">

            <thead class="bg-dark text-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Documento</th>
                    <th>Teléfono</th>
                    <th>Licencia</th>
                    <th>Estado</th>
                    <th style="width:170px;">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Items)
                {
                    string badgeClass = item.Status switch
                    {
                        "Disponible" => "bg-success",
                        "No Disponible" => "bg-secondary",
                        "Suspendido" => "bg-danger",
                        _ => "bg-light text-dark"
                    };

                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.DocumentId</td>
                        <td>@item.Phone</td>
                        <td>@item.LicenseNumber</td>

                        <td>
                            <span class="badge @badgeClass px-3 py-2">@item.Status</span>
                        </td>

                        <td>

                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-warning btn-sm text-white fw-bold rounded-circle me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-info btn-sm text-white fw-bold rounded-circle me-1">
                                <i class="bi bi-eye"></i>
                            </a>

                            <button class="btn btn-danger btn-sm fw-bold rounded-circle"
                                    onclick="confirmDelete(@item.Id)">
                                <i class="bi bi-trash-fill"></i>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">

            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?page=@(Model.CurrentPage - 1)&pageSize=@ViewBag.PageSize&search=@ViewBag.Search">
                        &laquo;
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       href="?page=@i&pageSize=@ViewBag.PageSize&search=@ViewBag.Search">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?page=@(Model.CurrentPage + 1)&pageSize=@ViewBag.PageSize&search=@ViewBag.Search">
                        &raquo;
                    </a>
                </li>
            }

        </ul>
    </nav>

</div>

<script>
    function confirmDelete(id) {
        if (confirm("¿Estás seguro de que deseas eliminar este conductor?")) {
            window.location.href = '/Drivers/Delete/' + id;
        }
    }
</script>
