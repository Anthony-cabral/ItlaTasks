@model EduTransportRD.Domain.Entities.Payment
@{
    ViewData["Title"] = "Detalles del pago";
}

<link rel="stylesheet" href="~/css/views-details.ccs" />

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Detalles del pago</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <p><strong>Estudiante: </strong>@Model.Student?.FirstName @Model.Student?.LastName</p>
            <p><strong>Monto: </strong>@Model.Amount.ToString("C")</p>
            <p><strong>Método: </strong>@Model.Method</p>
            <p><strong>Fecha: </strong>@Model.PaymentDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Estado: </strong>@Model.Status</p>
            <p><strong>Descripción: </strong>@Model.Description</p>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
