@model List<EduTransportRD.Domain.Entities.Payment>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Pagos Registrados</h2>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-dark table-hover table-striped align-middle text-center shadow rounded-3">

            <thead class="bg-dark text-light">
                <tr>
                    <th>Estudiante</th>
                    <th>Monto</th>
                    <th>MÃ©todo</th>
                    <th>Fecha</th>
                    <th style="width:150px;">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Student?.FirstName @p.Student?.LastName</td>
                        <td>DOP @p.Amount</td>
                        <td>@p.Method</td>
                        <td>@p.PaymentDate.ToString("dd/MM/yyyy hh:mm tt")</td>

                        <td>
                            <a asp-action="Details" asp-route-id="@p.Id"
                               class="btn btn-info btn-sm text-white fw-bold rounded-circle me-1">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@p.Id"
                               class="btn btn-danger btn-sm fw-bold rounded-circle">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
