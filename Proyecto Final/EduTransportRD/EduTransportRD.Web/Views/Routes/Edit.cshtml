@model EduTransportRD.Domain.Entities.Route

<div class="modal fade show" id="editRouteModal" tabindex="-1" style="display:block;" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content shadow-lg">

            <div class="modal-form-header">
                <h4 class="modal-title">Editar Ruta</h4>
                <a asp-action="Index" class="modal-close-x">&times;</a>
            </div>

            <div class="modal-body">

                <div class="form-header-info mb-4">
                    Actualiza la información de la ruta según corresponda.
                </div>

                <form asp-action="Edit">

                    <input type="hidden" asp-for="Id" />

                  
                    <h5 class="form-section-title">Datos generales</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="RouteName" class="form-label">Nombre de la ruta</label>
                                <input asp-for="RouteName" class="form-control" />
                                <span asp-validation-for="RouteName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="VehicleId" class="form-label">Vehículo asignado</label>
                                <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.VehicleList">
                                    <option value="">Sin asignar</option>
                                </select>
                                <span asp-validation-for="VehicleId" class="text-danger"></span>
                            </div>

                        </div>
                    </div>


                    
                    <h5 class="form-section-title">Horario base</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="StartTime" class="form-label">Hora de inicio</label>
                                <input asp-for="StartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EndTime" class="form-label">Hora de fin</label>
                                <input asp-for="EndTime" type="time" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>

                        </div>
                    </div>


                    
                    <h5 class="form-section-title">Tarifa</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-4">
                                <label asp-for="TicketPrice" class="form-label">Precio del boleto</label>
                                <input asp-for="TicketPrice" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="TicketPrice" class="text-danger"></span>
                            </div>

                        </div>
                    </div>


                    
                    <h5 class="form-section-title">Estado</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label">Estado</label>
                                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                        </div>
                    </div>


                    
                    <div class="modal-footer">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
