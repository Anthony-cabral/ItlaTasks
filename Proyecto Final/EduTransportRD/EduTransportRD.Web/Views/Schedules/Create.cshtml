@model EduTransportRD.Domain.Entities.Schedule

<div class="modal fade show modal-form-xl" style="display:block;" aria-modal="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content shadow-lg">

            <div class="modal-form-header">
                <h4 class="modal-title">Registrar horario</h4>
                <a asp-action="Index" class="modal-close-x">&times;</a>
            </div>

            <div class="modal-body">

                <form asp-action="Create" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <h5 class="form-section-title">Información del horario</h5>

                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">Día</label>
                                <select asp-for="WeekDay" class="form-select" asp-items="@(new SelectList(ViewBag.Days))">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="WeekDay" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Ruta</label>
                                <select asp-for="RouteId" class="form-select" asp-items="ViewBag.Routes">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="RouteId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DepartureTime" class="form-label">Hora salida</label>
                                <input asp-for="DepartureTime" type="time" class="form-control" />
                                <span asp-validation-for="DepartureTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ArrivalTime" class="form-label">Hora llegada</label>
                                <input asp-for="ArrivalTime" type="time" class="form-control" />
                                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
