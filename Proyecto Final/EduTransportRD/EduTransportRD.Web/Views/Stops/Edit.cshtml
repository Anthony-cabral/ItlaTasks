@model EduTransportRD.Domain.Entities.Stop

<div class="modal fade show modal-form-xl" style="display:block;" aria-modal="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content shadow-lg">

            <div class="modal-form-header">
                <h4 class="modal-title">Editar parada</h4>
                <a asp-action="Index" class="modal-close-x">&times;</a>
            </div>

            <div class="modal-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Id" />

                    <h5 class="form-section-title">Información de la parada</h5>

                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="StopName" class="form-label">Nombre</label>
                                <input asp-for="StopName" class="form-control" />
                                <span asp-validation-for="StopName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StopOrder" class="form-label">Orden</label>
                                <input asp-for="StopOrder" class="form-control" />
                                <span asp-validation-for="StopOrder" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label">Dirección</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="RouteId" class="form-label">Ruta</label>
                                <select asp-for="RouteId" class="form-select" asp-items="ViewBag.RoutesList">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="RouteId" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar cambios</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
