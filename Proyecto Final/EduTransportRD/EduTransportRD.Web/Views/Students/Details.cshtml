@model EduTransportRD.Domain.Entities.Student

@{
    ViewData["Title"] = "Detalles del Estudiante";

    
    string initials = $"{Model.FirstName?.FirstOrDefault()}{Model.LastName?.FirstOrDefault()}".ToUpper();
}

<link rel="stylesheet" href="~/css/views-details.ccs" />

<div class="details-container">

 
    <div class="details-header">
        <div class="profile-circle">
            @initials
        </div>

        <div>
            <h2>@Model.FirstName @Model.LastName</h2>
            <p class="details-subtitle">Matrícula: @Model.Enrollment</p>
        </div>

        <div class="details-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <button class="btn btn-danger" onclick="confirmDelete(@Model.Id)">Eliminar</button>
        </div>
    </div>

 
    <div class="details-body">

       
        <h4 class="section-title">Información Personal</h4>
        <div class="section-box">
            <p><strong>Nombre: </strong>@Model.FirstName @Model.LastName</p>
            <p><strong>Documento: </strong>@Model.DocumentId</p>
            <p><strong>Fecha de Nacimiento: </strong>@Model.BirthDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Tipo de Sangre: </strong>@Model.BloodType</p>
            <p><strong>Condiciones Médicas: </strong>@Model.MedicalConditions</p>
        </div>

        <h4 class="section-title">Contacto del Estudiante</h4>
        <div class="section-box">
            <p><strong>Email: </strong>@Model.StudentEmail</p>
            <p><strong>Teléfono: </strong>@Model.StudentPhone</p>
            <p><strong>Dirección: </strong>@Model.Address</p>
            <p><strong>Ciudad / Distrito: </strong>@Model.City - @Model.District</p>
        </div>

        
        <h4 class="section-title">Información Académica</h4>
        <div class="section-box">
            <p><strong>Grado: </strong>@Model.Grade</p>
            <p><strong>Estado: </strong>@Model.Status</p>
        </div>

        
        <h4 class="section-title">Tutor Legal</h4>
        <div class="section-box">
            <p><strong>Nombre: </strong>@Model.GuardianName</p>
            <p><strong>Teléfono: </strong>@Model.GuardianPhone</p>
            <p><strong>Email: </strong>@Model.GuardianEmail</p>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "¿Eliminar estudiante?",
                text: "Esta acción no se puede deshacer.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = "/Students/Delete/" + id;
                }
            });
        }
    </script>
}
