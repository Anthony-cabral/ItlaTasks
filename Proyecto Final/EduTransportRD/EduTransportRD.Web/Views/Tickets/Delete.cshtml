@model EduTransportRD.Domain.Entities.Ticket

<h2 class="fw-bold mb-3">Eliminar ticket</h2>

<div class="card p-4">
    <p>Â¿Seguro que deseas eliminar este ticket?</p>

    <p><strong>Estudiante: </strong>@Model.Student.FirstName @Model.Student.LastName</p>
    <p><strong>Ruta: </strong>@Model.Route.RouteName</p>
    <p><strong>Horario: </strong>@DateTime.Today.Add(Model.Schedule.DepartureTime).ToString("hh:mm tt")</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
