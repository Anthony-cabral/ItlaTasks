@model EduTransportRD.Domain.Entities.Vehicle

<div class="modal fade show modal-form-xl" style="display:block;" aria-modal="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content shadow-lg">

      
            <div class="modal-form-header">
                <h4 class="modal-title">Registrar Vehículo</h4>
                <a asp-action="Index" class="modal-close-x">&times;</a>
            </div>

          
            <div class="modal-body">

                <div class="form-header-info mb-4">
                    Completa la información del vehículo para continuar.
                </div>

                <form asp-action="Create">

                    
                    <h5 class="form-section-title">Datos del vehículo</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-4">
                                <label asp-for="Plate" class="form-label">Placa</label>
                                <input asp-for="Plate" class="form-control" />
                                <span asp-validation-for="Plate" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Brand" class="form-label">Marca</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Model" class="form-label">Modelo</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Year" class="form-label">Año</label>
                                <input asp-for="Year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Capacity" class="form-label">Capacidad</label>
                                <input asp-for="Capacity" class="form-control" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <h5 class="form-section-title">Asignación</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="DriverId" class="form-label">Conductor asignado</label>
                                <select asp-for="DriverId" class="form-select" asp-items="ViewBag.DriverList">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="DriverId" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                
                    <h5 class="form-section-title">Estado del vehículo</h5>
                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label">Estado</label>
                                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                
                    <div class="modal-form-footer">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
