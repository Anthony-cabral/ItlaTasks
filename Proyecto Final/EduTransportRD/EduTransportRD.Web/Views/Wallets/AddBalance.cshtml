@model EduTransportRD.Domain.Entities.Payment

<div class="modal fade show modal-form-xl" style="display:block;" aria-modal="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg">

            <div class="modal-form-header">
                <h4 class="modal-title">Agregar saldo</h4>
                <a asp-action="Index" class="modal-close-x">&times;</a>
            </div>

            <div class="modal-body">

                <form asp-action="AddBalance" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="StudentId" />

                    <h5 class="form-section-title">Datos del pago</h5>

                    <div class="form-section-card mb-4">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label">Monto</label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Method" class="form-label">MÃ©todo</label>
                                <select asp-for="Method" class="form-select">
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Transferencia">Transferencia</option>
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="modal-form-footer">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
