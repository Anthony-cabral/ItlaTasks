@model List<EduTransportRD.Domain.Entities.Wallet>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Carteras de Estudiantes</h2>
    </div>

    <form method="get" class="d-flex justify-content-end gap-2 mb-3">
        <input type="text"
               name="search"
               value="@ViewBag.Search"
               class="form-control"
               placeholder="Buscar por nombre o matrícula..."
               style="max-width:300px;" />

        <button class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </form>

    <div class="table-responsive mt-3">
        <table class="table table-dark table-hover table-striped align-middle text-center shadow rounded-3">

            <thead class="bg-dark text-light">
                <tr>
                    <th>Estudiante</th>
                    <th>Matrícula</th>
                    <th>Balance</th>
                    <th>Última Recarga</th>
                    <th style="width:170px;">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var w in Model)
                {
                    string balanceClass = w.Balance switch
                    {
                        <= 0 => "bg-danger",
                        < 200 => "bg-warning text-dark",
                        < 500 => "bg-info text-dark",
                        _ => "bg-success"
                    };

                    <tr>
                        <td>@w.Student.FirstName @w.Student.LastName</td>
                        <td>@w.Student.Enrollment</td>

                        <td>
                            <span class="badge @balanceClass px-3 py-2">DOP @w.Balance</span>
                        </td>

                        <td>@w.LastRecharge.ToString("dd/MM/yyyy hh:mm tt")</td>

                        <td>
                            <a asp-action="AddBalance"
                               asp-route-studentId="@w.StudentId"
                               class="btn btn-success btn-sm fw-bold text-white rounded-pill">
                                <i class="bi bi-plus-circle"></i> Recargar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
